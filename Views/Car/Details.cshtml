@model RentCar.Web.ViewModels.Car.CarDetailsViewModel

<h2>Car Details</h2>

<div>
    <h4>@Model.Name (@Model.Year)</h4>
    <dl class="row">
        <dt class="col-sm-2">Model</dt>
        <dd class="col-sm-10">@Model.Model</dd>

        <dt class="col-sm-2">License Plate</dt>
        <dd class="col-sm-10">@Model.LicensePlate</dd>

        <dt class="col-sm-2">Seats</dt>
        <dd class="col-sm-10">@Model.NumberOfCarSeats</dd>

        <dt class="col-sm-2">Transmission</dt>
        <dd class="col-sm-10">@Model.Transmission</dd>

        <dt class="col-sm-2">Price/Day</dt>
        <dd class="col-sm-10">@Model.PricePerDay</dd>

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@((Model.Status) ? "Available" : "Unavailable")</dd>
    </dl>

    <h5>Images</h5>
    <div>
        @foreach (var url in Model.ImageUrls) {
            <img src="@url" alt="Car image" width="200" style="margin:5px;" />
        }
    </div>
</div>

<p>
    <a asp-action="Edit" asp-route-id="@Model.CarId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</p>