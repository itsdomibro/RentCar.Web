@model IEnumerable<RentCar.Web.ViewModels.Car.CarListViewModel>

<h2>Cars</h2>
<p>
    <a asp-action="Create" class="btn btn-primary">Create New Car</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Model</th>
            <th>Year</th>
            <th>Seats</th>
            <th>Price/Day</th>
            <th>Status</th>
            <th>Image</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var car in Model) {
            <tr>
                <td>@car.Name</td>
                <td>@car.Model</td>
                <td>@car.Year</td>
                <td>@car.NumberOfCarSeats</td>
                <td>@car.PricePerDay</td>
                <td>@(car.Status ? "Available" : "Unavailable")</td>
                <td>
                    @if (car.ImageUrls?.Any() == true) {
                        <img src="@car.ImageUrls.First()" alt="Car image" width="100" />
                    }
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@car.CarId">Details</a> |
                    <a asp-action="Edit" asp-route-id="@car.CarId">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@car.CarId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>