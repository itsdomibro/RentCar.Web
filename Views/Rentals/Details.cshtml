@model RentCar.Web.ViewModels.Rentals.RentalDetailsViewModel

@{
    ViewData["Title"] = "Rental Details";
}

<div class="page-container">
    <div class="page-header">
        <div>
            <h1 class="page-title">Rental Details</h1>
            <p class="page-subtitle">@Model.RentalDate.ToShortDateString() - @Model.ReturnDate.ToShortDateString()</p>
        </div>
        <div class="action-buttons">
            <a asp-action="Index" class="btn btn-outline-secondary">Back</a>
            <a asp-action="Update" asp-route-id="@Model.RentalId" class="btn btn-primary">Edit</a>
            <a asp-action="Delete" asp-route-id="@Model.RentalId" class="btn btn-danger">Delete</a>
        </div>
    </div>

    <div class="view-card">
        <h2 class="card-title">Rental Information</h2>
        <div class="details-list">
            <div class="details-item">
                <div class="details-label">Rental Date</div>
                <div class="details-value">@Model.RentalDate.ToShortDateString()</div>
            </div>
            <div class="details-item">
                <div class="details-label">Return Date</div>
                <div class="details-value">@Model.ReturnDate.ToShortDateString()</div>
            </div>
            <div class="details-item">
                <div class="details-label">Total Price</div>
                <div class="details-value">@Model.TotalPrice.ToString("C")</div>
            </div>
            <div class="details-item">
                <div class="details-label">Status</div>
                <div class="details-value">
                    <span class="badge @(Model.PaymentStatus ? "badge-success" : "badge-warning")">
                        @(Model.PaymentStatus ? "Paid" : "Unpaid")
                    </span>
                </div>
            </div>
        </div>
    </div>

    <div class="view-card">
        <h2 class="card-title">Customer</h2>
        <div class="details-list">
            <div class="details-item">
                <div class="details-label">Name</div>
                <div class="details-value">@Model.CustomerName</div>
            </div>
            <div class="details-item">
                <div class="details-label">Email</div>
                <div class="details-value">@Model.Email</div>
            </div>
            <div class="details-item">
                <div class="details-label">Phone</div>
                <div class="details-value">@Model.PhoneNumber</div>
            </div>
            <div class="details-item">
                <div class="details-label">Address</div>
                <div class="details-value">@Model.Address</div>
            </div>
            <div class="details-item">
                <div class="details-label">License</div>
                <div class="details-value">@Model.DriverLicenseNumber</div>
            </div>
        </div>
    </div>

    <div class="view-card">
        <h2 class="card-title">Car</h2>
        <div class="details-list">
            <div class="details-item">
                <div class="details-label">Name</div>
                <div class="details-value">@Model.CarName</div>
            </div>
            <div class="details-item">
                <div class="details-label">Model</div>
                <div class="details-value">@Model.Model</div>
            </div>
            <div class="details-item">
                <div class="details-label">Year</div>
                <div class="details-value">@Model.Year</div>
            </div>
            <div class="details-item">
                <div class="details-label">License Plate</div>
                <div class="details-value">@Model.LicensePlate</div>
            </div>
            <div class="details-item">
                <div class="details-label">Seats</div>
                <div class="details-value">@Model.NumberOfCarSeats</div>
            </div>
            <div class="details-item">
                <div class="details-label">Transmission</div>
                <div class="details-value">@Model.Transmission</div>
            </div>
        </div>
    </div>

    @if (Model.Payments != null && Model.Payments.Any()) {
        <div class="view-card">
            <h2 class="card-title">Payments</h2>
            <table class="view-table">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Amount</th>
                        <th>Method</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var p in Model.Payments) {
                        <tr>
                            <td>@p.Date.ToShortDateString()</td>
                            <td>@p.Amount.ToString("C")</td>
                            <td>@p.PaymentMethod</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
