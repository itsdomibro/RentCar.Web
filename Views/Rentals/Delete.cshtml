@model RentCar.Web.ViewModels.Rentals.DeleteRentalViewModel

@{
    ViewData["Title"] = "Delete Rental";
}

<div class="page-container">
    <div class="view-card">
        <div class="delete-confirmation">
            <h3>Delete Rental</h3>
            <p>Are you sure you want to delete this rental?</p>
            <div class="details-list" style="margin-top: 2rem;">
                <div class="details-item">
                    <div class="details-label">Rental Date</div>
                    <div class="details-value">@Model.RentalDate.ToShortDateString()</div>
                </div>
                <div class="details-item">
                    <div class="details-label">Return Date</div>
                    <div class="details-value">@Model.ReturnDate.ToShortDateString()</div>
                </div>
                <div class="details-item">
                    <div class="details-label">Total Price</div>
                    <div class="details-value">@Model.TotalPrice.ToString("C")</div>
                </div>
                <div class="details-item">
                    <div class="details-label">Status</div>
                    <div class="details-value">
                        <span class="badge @(Model.PaymentStatus ? "badge-success" : "badge-warning")">
                            @(Model.PaymentStatus ? "Paid" : "Unpaid")
                        </span>
                    </div>
                </div>
                <div class="details-item">
                    <div class="details-label">Customer</div>
                    <div class="details-value">@Model.Email</div>
                </div>
                <div class="details-item">
                    <div class="details-label">Car</div>
                    <div class="details-value">@Model.Name @Model.Model (@Model.Year) - @Model.LicensePlate</div>
                </div>
            </div>
            <form asp-action="Delete" method="post" asp-antiforgery="true" style="display: flex; gap: 1rem; justify-content: center; margin-top: 2rem;">
                <input type="hidden" asp-for="RentalId" />
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>
