@model RentCar.Web.ViewModels.Rentals.DeleteRentalViewModel

@{
    ViewData["Title"] = "Delete Rental";
}

<h2>Delete Rental</h2>

<div class="warning">
    Are you sure you want to delete this rental?
</div>

<dl>
    <dt>Rental Date</dt>
    <dd>@Model.RentalDate.ToShortDateString()</dd>

    <dt>Return Date</dt>
    <dd>@Model.ReturnDate.ToShortDateString()</dd>

    <dt>Total Price</dt>
    <dd>@Model.TotalPrice.ToString("C")</dd>

    <dt>Status</dt>
    <dd>@(Model.PaymentStatus ? "Paid" : "Unpaid")</dd>

    <dt>Customer</dt>
    <dd>@Model.Email</dd>

    <dt>Car</dt>
    <dd>@Model.Name @Model.Model (@Model.Year) - @Model.LicensePlate</dd>
</dl>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="RentalId" />
    <button type="submit">Delete</button>
    <a asp-action="Index">Cancel</a>
</form>