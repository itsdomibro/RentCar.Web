@model RentCar.Web.ViewModels.Rentals.UpdateRentalViewModel

@{
    ViewData["Title"] = "Update Rental";
}

<h2>Update Rental</h2>

<form asp-action="Update" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="RentalId" />

    <label asp-for="RentalDate"></label>
    <input asp-for="RentalDate" type="date" />
    <span asp-validation-for="RentalDate"></span>

    <label asp-for="ReturnDate"></label>
    <input asp-for="ReturnDate" type="date" />
    <span asp-validation-for="ReturnDate"></span>

    <label asp-for="TotalPrice"></label>
    <input asp-for="TotalPrice" />
    <span asp-validation-for="TotalPrice"></span>

    <label asp-for="PaymentStatus"></label>
    <input asp-for="PaymentStatus" type="checkbox" />

    <label asp-for="CustomerId"></label>
    <select asp-for="CustomerId" asp-items="Model.Customers"></select>
    <span asp-validation-for="CustomerId"></span>

    <label asp-for="CarId"></label>
    <select asp-for="CarId" asp-items="Model.Cars"></select>
    <span asp-validation-for="CarId"></span>

    <button type="submit">Update</button>
    <a asp-action="Index">Cancel</a>
</form>