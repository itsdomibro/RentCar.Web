@model IEnumerable<RentCar.Web.ViewModels.PaymentController.PaymentIndexViewModel>

@{
    ViewData["Title"] = "Payments";
}

<div class="page-container">
    <div class="page-header">
        <div>
            <h1 class="page-title">Payments</h1>
            <p class="page-subtitle">Manage payment records</p>
        </div>
        <a asp-action="Create" class="btn btn-primary">Add Payment</a>
    </div>

    <div class="view-card">
        <table class="view-table">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Amount</th>
                    <th>Method</th>
                    <th>Total Price</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any()) {
                    @foreach (var payment in Model) {
                        <tr>
                            <td>@payment.Date.ToShortDateString()</td>
                            <td>@payment.Amount.ToString("C")</td>
                            <td>@payment.PaymentMethod</td>
                            <td>@payment.TotalPrice.ToString("C")</td>
                            <td>
                                <span class="badge @(payment.PaymentStatus ? "badge-success" : "badge-danger")">
                                    @(payment.PaymentStatus ? "Paid" : "Unpaid")
                                </span>
                            </td>
                            <td>
                                <div class="action-buttons">
                                    <a asp-action="Update" asp-route-id="@payment.PaymentId" class="btn btn-primary">Edit</a>
                                    <a asp-action="Delete" asp-route-id="@payment.PaymentId" class="btn btn-danger">Delete</a>
                                </div>
                            </td>
                        </tr>
                    }
                } else {
                    <tr>
                        <td colspan="6" class="empty-state">No payments found.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
