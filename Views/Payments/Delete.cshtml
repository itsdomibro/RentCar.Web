@model RentCar.Web.ViewModels.PaymentController.DeletePaymentViewModel

@{
    ViewData["Title"] = "Delete Payment";
}

<h2>Delete Payment</h2>

<div class="alert alert-warning">
    <strong>Are you sure you want to delete this payment?</strong>
</div>

<dl class="row">
    <dt class="col-sm-3">Date</dt>
    <dd class="col-sm-9">@Model.Date.ToShortDateString()</dd>

    <dt class="col-sm-3">Amount</dt>
    <dd class="col-sm-9">@Model.Amount.ToString("C")</dd>

    <dt class="col-sm-3">Method</dt>
    <dd class="col-sm-9">@Model.PaymentMethod</dd>

    <dt class="col-sm-3">Total Price</dt>
    <dd class="col-sm-9">@Model.TotalPrice.ToString("C")</dd>

    <dt class="col-sm-3">Status</dt>
    <dd class="col-sm-9">
        @if (Model.PaymentStatus) {
            <span class="badge bg-success">Paid</span>
        } else {
            <span class="badge bg-danger">Unpaid</span>
        }
    </dd>
</dl>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="PaymentId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>