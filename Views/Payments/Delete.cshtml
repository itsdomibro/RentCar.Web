@model RentCar.Web.ViewModels.PaymentController.DeletePaymentViewModel

@{
    ViewData["Title"] = "Delete Payment";
}

<div class="page-container">
    <div class="view-card">
        <div class="delete-confirmation">
            <h3>Delete Payment</h3>
            <p>Are you sure you want to delete this payment?</p>
            <div class="details-list" style="margin-top: 2rem;">
                <div class="details-item">
                    <div class="details-label">Date</div>
                    <div class="details-value">@Model.Date.ToShortDateString()</div>
                </div>
                <div class="details-item">
                    <div class="details-label">Amount</div>
                    <div class="details-value">@Model.Amount.ToString("C")</div>
                </div>
                <div class="details-item">
                    <div class="details-label">Method</div>
                    <div class="details-value">@Model.PaymentMethod</div>
                </div>
                <div class="details-item">
                    <div class="details-label">Total Price</div>
                    <div class="details-value">@Model.TotalPrice.ToString("C")</div>
                </div>
                <div class="details-item">
                    <div class="details-label">Status</div>
                    <div class="details-value">
                        <span class="badge @(Model.PaymentStatus ? "badge-success" : "badge-danger")">
                            @(Model.PaymentStatus ? "Paid" : "Unpaid")
                        </span>
                    </div>
                </div>
            </div>
            <form asp-action="Delete" method="post" asp-antiforgery="true" style="display: flex; gap: 1rem; justify-content: center; margin-top: 2rem;">
                <input type="hidden" asp-for="PaymentId" />
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>
