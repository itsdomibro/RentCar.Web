@model RentCar.Web.ViewModels.Maintenances.MaintenanceDetailViewModel

@{
    ViewData["Title"] = "Maintenance Details";
}

<div class="page-container">
    <div class="page-header">
        <div>
            <h1 class="page-title">Maintenance Details</h1>
            <p class="page-subtitle">@Model.Date.ToShortDateString()</p>
        </div>
        <div class="action-buttons">
            <a asp-action="Index" class="btn btn-outline-secondary">Back</a>
            <a asp-action="Update" asp-route-id="@Model.MaintenanceId" class="btn btn-primary">Edit</a>
            <a asp-action="Delete" asp-route-id="@Model.MaintenanceId" class="btn btn-danger">Delete</a>
        </div>
    </div>

    <div class="view-card">
        <div class="details-list">
            <div class="details-item">
                <div class="details-label">Date</div>
                <div class="details-value">@Model.Date.ToShortDateString()</div>
            </div>
            <div class="details-item">
                <div class="details-label">Description</div>
                <div class="details-value">@Model.Description</div>
            </div>
            <div class="details-item">
                <div class="details-label">Cost</div>
                <div class="details-value">@Model.Cost.ToString("C")</div>
            </div>
        </div>
    </div>

    <div class="view-card">
        <h2 class="card-title">Employee</h2>
        <div class="details-list">
            <div class="details-item">
                <div class="details-label">Name</div>
                <div class="details-value">@Model.EmployeeName</div>
            </div>
            <div class="details-item">
                <div class="details-label">Position</div>
                <div class="details-value">@Model.Position</div>
            </div>
            <div class="details-item">
                <div class="details-label">Email</div>
                <div class="details-value">@Model.EmployeeEmail</div>
            </div>
            <div class="details-item">
                <div class="details-label">Phone</div>
                <div class="details-value">@Model.PhoneNumber</div>
            </div>
        </div>
    </div>

    <div class="view-card">
        <h2 class="card-title">Car</h2>
        <div class="details-list">
            <div class="details-item">
                <div class="details-label">Name</div>
                <div class="details-value">@Model.CarName</div>
            </div>
            <div class="details-item">
                <div class="details-label">Model</div>
                <div class="details-value">@Model.CarModel</div>
            </div>
            <div class="details-item">
                <div class="details-label">Year</div>
                <div class="details-value">@Model.CarYear</div>
            </div>
            <div class="details-item">
                <div class="details-label">License Plate</div>
                <div class="details-value">@Model.LicensePlate</div>
            </div>
            <div class="details-item">
                <div class="details-label">Seats</div>
                <div class="details-value">@Model.NumberOfCarSeats</div>
            </div>
            <div class="details-item">
                <div class="details-label">Transmission</div>
                <div class="details-value">@Model.Transmission</div>
            </div>
        </div>
    </div>
</div>
