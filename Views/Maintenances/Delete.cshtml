@model RentCar.Web.ViewModels.Maintenances.MaintenanceDeleteViewModel

@{
    ViewData["Title"] = "Delete Maintenance";
}

<div class="page-container">
    <div class="view-card">
        <div class="delete-confirmation">
            <h3>Delete Maintenance</h3>
            <p>Are you sure you want to delete this maintenance record?</p>
            <p><strong>Date:</strong> @Model.Date.ToShortDateString()</p>
            <p><strong>Employee:</strong> @Model.EmployeeName</p>
            <p><strong>Car:</strong> @Model.CarName @Model.CarModel (@Model.CarYear) - @Model.LicensePlate</p>
            <form asp-action="Delete" asp-antiforgery="true" style="display: flex; gap: 1rem; justify-content: center; margin-top: 2rem;">
                <input type="hidden" asp-for="MaintenanceId" />
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>
