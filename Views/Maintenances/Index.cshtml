@model RentCar.Web.ViewModels.Maintenances.MaintenanceIndexViewModel

<div class="container py-4">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center mb-3 gap-2">
        <div>
            <h2 class="mb-0">Maintenances</h2>
            <p class="text-muted mb-0">Filter, sort, and manage maintenance records</p>
        </div>
        <a asp-action="Create" class="btn btn-primary">Create New Maintenance</a>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <form method="get" asp-action="Index" class="row g-3">
                <div class="col-md-4 col-lg-3">
                    <label class="form-label">Employee</label>
                    <input type="text" name="employeeName" value="@Model.EmployeeName" class="form-control" placeholder="Employee name" />
                </div>
                <div class="col-md-4 col-lg-3">
                    <label class="form-label">Car</label>
                    <input type="text" name="carName" value="@Model.CarName" class="form-control" placeholder="Car name" />
                </div>
                <div class="col-md-4 col-lg-3">
                    <label class="form-label">Model</label>
                    <input type="text" name="carModel" value="@Model.CarModel" class="form-control" placeholder="Car model" />
                </div>
                <div class="col-md-4 col-lg-3">
                    <label class="form-label">Year</label>
                    <input type="number" name="carYear" value="@Model.CarYear" class="form-control" placeholder="e.g. 2024" />
                </div>
                <div class="col-md-4 col-lg-3">
                    <label class="form-label">License Plate</label>
                    <input type="text" name="licensePlate" value="@Model.LicensePlate" class="form-control" placeholder="Plate number" />
                </div>
                <div class="col-md-4 col-lg-3">
                    <label class="form-label">Start Date</label>
                    <input type="date" name="startDate" value="@(Model.StartDate?.ToString("yyyy-MM-dd"))" class="form-control" />
                </div>
                <div class="col-md-4 col-lg-3">
                    <label class="form-label">End Date</label>
                    <input type="date" name="endDate" value="@(Model.EndDate?.ToString("yyyy-MM-dd"))" class="form-control" />
                </div>
                <div class="col-md-4 col-lg-3">
                    <label class="form-label">Min Cost</label>
                    <input type="number" step="0.01" name="minCost" value="@Model.MinCost" class="form-control" placeholder="0.00" />
                </div>
                <div class="col-md-4 col-lg-3">
                    <label class="form-label">Max Cost</label>
                    <input type="number" step="0.01" name="maxCost" value="@Model.MaxCost" class="form-control" placeholder="1000.00" />
                </div>
                <div class="col-md-4 col-lg-3">
                    <label class="form-label">Sort By</label>
                    <select name="sortBy" class="form-select" value="@Model.SortBy">
                        <option value="Date" selected="@("Date" == Model.SortBy)">Date</option>
                        <option value="Cost" selected="@("Cost" == Model.SortBy)">Cost</option>
                        <option value="EmployeeName" selected="@("EmployeeName" == Model.SortBy)">Employee</option>
                        <option value="CarName" selected="@("CarName" == Model.SortBy)">Car</option>
                    </select>
                </div>
                <div class="col-md-4 col-lg-3">
                    <label class="form-label">Order</label>
                    <select name="sortDescending" class="form-select">
                        <option value="true" selected="@(Model.SortDescending)">Descending</option>
                        <option value="false" selected="@(!Model.SortDescending)">Ascending</option>
                    </select>
                </div>
                <div class="col-12 d-flex gap-2">
                    <button type="submit" class="btn btn-primary">Apply Filters</button>
                    <a asp-action="Index" class="btn btn-outline-secondary">Reset</a>
                </div>
            </form>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Date</th>
                        <th>Cost</th>
                        <th>Employee</th>
                        <th>Car</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Maintenances.Any()) {
                        @foreach (var m in Model.Maintenances) {
                            <tr>
                                <td>@m.Date.ToShortDateString()</td>
                                <td>@m.Cost.ToString("C")</td>
                                <td>
                                    <div class="fw-semibold">@m.EmployeeName</div>
                                    <div class="text-muted small">@m.EmployeeEmail</div>
                                </td>
                                <td>
                                    <div class="fw-semibold">@m.CarName (@m.CarModel, @m.CarYear)</div>
                                    <div class="text-muted small">@m.LicensePlate</div>
                                </td>
                                <td class="text-end">
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a class="btn btn-outline-secondary" asp-action="Details" asp-route-id="@m.MaintenanceId">Details</a>
                                        <a class="btn btn-outline-primary" asp-action="Update" asp-route-id="@m.MaintenanceId">Edit</a>
                                        <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@m.MaintenanceId">Delete</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    } else {
                        <tr>
                            <td colspan="5" class="text-center py-4 text-muted">No maintenances found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="card-footer d-flex justify-content-between align-items-center">
            <span>Page @Model.PageNumber of @Model.TotalPages</span>
            <div class="btn-group">
                <a class="btn btn-outline-secondary @(Model.PageNumber <= 1 ? "disabled" : "")" asp-action="Index" asp-route-pageNumber="@(Model.PageNumber - 1)">Prev</a>
                <a class="btn btn-outline-secondary @(Model.PageNumber >= Model.TotalPages ? "disabled" : "")" asp-action="Index" asp-route-pageNumber="@(Model.PageNumber + 1)">Next</a>
            </div>
        </div>
    </div>
</div>