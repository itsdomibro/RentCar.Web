@model RentCar.Web.ViewModels.Maintenances.MaintenanceCreateViewModel

@{
    ViewData["Title"] = "Create Maintenance";
}

<div class="page-container">
    <div class="page-header">
        <div>
            <h1 class="page-title">Create Maintenance</h1>
            <p class="page-subtitle">Log a new maintenance entry</p>
        </div>
        <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
    </div>

    <div class="view-card">
        <form asp-action="Create" method="post" asp-antiforgery="true" class="view-form">
            <div asp-validation-summary="All" class="alert alert-danger"></div>

            <div class="form-row">
                <div class="form-group">
                    <label asp-for="Date" class="form-label">Date</label>
                    <input asp-for="Date" type="date" class="form-control" />
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Cost" class="form-label">Cost</label>
                    <div class="input-group">
                        <span class="input-group-text">$</span>
                        <input asp-for="Cost" type="number" step="0.01" class="form-control" />
                    </div>
                    <span asp-validation-for="Cost" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="form-label">Description</label>
                <textarea asp-for="Description" rows="3" class="form-control" placeholder="Short description of the maintenance work"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label asp-for="CarId" class="form-label">Car</label>
                    <select asp-for="CarId" asp-items="Model.Cars" class="form-select">
                        <option value="">Select a car</option>
                    </select>
                    <span asp-validation-for="CarId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="EmployeeId" class="form-label">Employee</label>
                    <select asp-for="EmployeeId" asp-items="Model.Employees" class="form-select">
                        <option value="">Assign to an employee</option>
                    </select>
                    <span asp-validation-for="EmployeeId" class="text-danger"></span>
                </div>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
