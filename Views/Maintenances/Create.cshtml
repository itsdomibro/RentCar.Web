@model RentCar.Web.ViewModels.Maintenances.MaintenanceCreateViewModel

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h2 class="mb-0">Create Maintenance</h2>
            <p class="text-muted mb-0">Log a new maintenance entry</p>
        </div>
        <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="Create" method="post" class="row g-3" asp-antiforgery="true">
                <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>

                <div class="col-md-6">
                    <label asp-for="Date" class="form-label"></label>
                    <input asp-for="Date" type="date" class="form-control" />
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Cost" class="form-label"></label>
                    <div class="input-group">
                        <span class="input-group-text">$</span>
                        <input asp-for="Cost" type="number" step="0.01" class="form-control" />
                    </div>
                    <span asp-validation-for="Cost" class="text-danger"></span>
                </div>

                <div class="col-12">
                    <label asp-for="Description" class="form-label"></label>
                    <textarea asp-for="Description" rows="3" class="form-control"
                              placeholder="Short description of the maintenance work"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="CarId" class="form-label"></label>
                    <select asp-for="CarId" asp-items="Model.Cars" class="form-select">
                        <option value="">Select a car</option>
                    </select>
                    <span asp-validation-for="CarId" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="EmployeeId" class="form-label"></label>
                    <select asp-for="EmployeeId" asp-items="Model.Employees" class="form-select">
                        <option value="">Assign to an employee</option>
                    </select>
                    <span asp-validation-for="EmployeeId" class="text-danger"></span>
                </div>

                <div class="col-12 d-flex gap-2">
                    <button type="submit" class="btn btn-primary">Save</button>
                    <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>