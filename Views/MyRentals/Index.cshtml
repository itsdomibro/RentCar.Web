@model RentCar.Web.ViewModels.MyRental.MyRentalIndexViewModel

@{
    ViewData["Title"] = "My Rentals";
}

<div class="page-container">
    <div class="page-header">
        <div>
            <h1 class="page-title">My Rentals</h1>
            <p class="page-subtitle">Recent rental history</p>
        </div>
    </div>

    <div class="view-card">
        <table class="view-table">
            <thead>
                <tr>
                    <th>Rental Dates</th>
                    <th>Car</th>
                    <th>Price/Day</th>
                    <th>Total Days</th>
                    <th>Total Price</th>
                    <th>Payment</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.RentalListItems.Any()) {
                    @foreach (var rentalItem in Model.RentalListItems) {
                        <tr>
                            <td>@rentalItem.RentalDate.ToString("dd/MM/yyyy") - @rentalItem.ReturnDate.ToString("dd/MM/yyyy")</td>
                            <td>@rentalItem.Model @rentalItem.Year</td>
                            <td>@rentalItem.PricePerDay.ToString("C")</td>
                            <td>@rentalItem.TotalRentalDays</td>
                            <td style="font-weight: 600;">@rentalItem.TotalPrice.ToString("C")</td>
                            <td>
                                <span class="badge @(rentalItem.PaymentStatus ? "badge-success" : "badge-warning")">
                                    @(rentalItem.PaymentStatus ? "Paid" : "Unpaid")
                                </span>
                            </td>
                        </tr>
                    }
                } else {
                    <tr>
                        <td colspan="6" class="empty-state">No rentals recorded.</td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="pagination">
            <div class="pagination-info">Page @Model.PageNumber of @(Math.Ceiling((double)Model.TotalRentals / Model.PageSize))</div>
            <div class="pagination-buttons">
                <a asp-action="Index" asp-route-pageNumber="@(Model.PageNumber - 1)" class="btn btn-outline-secondary @(Model.PageNumber <= 1 ? "disabled" : "")">Previous</a>
                <a asp-action="Index" asp-route-pageNumber="@(Model.PageNumber + 1)" class="btn btn-outline-secondary @(Model.PageNumber >= Math.Ceiling((double)Model.TotalRentals / Model.PageSize) ? "disabled" : "")">Next</a>
            </div>
        </div>
    </div>
</div>
