@model RentCar.Web.ViewModels.MyRental.MyRentalCreateViewModel

@{
    ViewData["Title"] = "Rent Car";
}

<div class="page-container">
    <div class="page-header">
        <div>
            <h1 class="page-title">Rent @Model.Name @Model.Model</h1>
            <p class="page-subtitle">Price per day: @Model.PricePerDay.ToString("C")</p>
        </div>
        <a asp-controller="Cars" asp-action="Details" asp-route-id="@Model.CarId" class="btn btn-outline-secondary">Back to car</a>
    </div>

    @if (Model.ImageUrls.Any()) {
        <div class="view-card">
            <h2 class="card-title">Car Images</h2>
            <div class="image-gallery">
                @foreach (var url in Model.ImageUrls) {
                    <img src="@url" />
                }
            </div>
        </div>
    }

    <div class="view-card">
        <form asp-action="Create" method="post" class="view-form" asp-antiforgery="true">
            <input type="hidden" asp-for="CarId" />
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="form-row">
                <div class="form-group">
                    <label asp-for="RentalDate" class="form-label">Rental Date</label>
                    <input asp-for="RentalDate" type="date" class="form-control" />
                    <span asp-validation-for="RentalDate" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ReturnDate" class="form-label">Return Date</label>
                    <input asp-for="ReturnDate" type="date" class="form-control" />
                    <span asp-validation-for="ReturnDate" class="text-danger"></span>
                </div>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn btn-primary">Confirm Rental</button>
                <a asp-controller="Cars" asp-action="Details" asp-route-id="@Model.CarId" class="btn btn-outline-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
