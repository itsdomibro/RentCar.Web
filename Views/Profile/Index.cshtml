@model RentCar.Web.ViewModels.Profile.ProfileIndexViewModel

@{
    ViewData["Title"] = "Profile";
}

<h2>Profile</h2>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Name</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Model.Email</dd>

            <dt class="col-sm-3">Phone Number</dt>
            <dd class="col-sm-9">@Model.PhoneNumber</dd>

            <dt class="col-sm-3">Address</dt>
            <dd class="col-sm-9">@Model.Address</dd>

            <dt class="col-sm-3">Driver License</dt>
            <dd class="col-sm-9">@Model.DriverLicenseNumber</dd>

            <dt class="col-sm-3">Role</dt>
            <dd class="col-sm-9">@Model.Role</dd>
        </dl>
        <a asp-action="Update" class="btn btn-primary">Edit Profile</a>
        <a asp-action="ChangePassword" class="btn btn-warning">Change Password</a>
    </div>
</div>