@model RentCar.Web.ViewModels.Car.CarCreateViewModel

@{
    ViewData["Title"] = "Create a Car";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h2 class="mb-0">Create Car</h2>
            <p class="text-muted mb-0">Add a new vehicle to the fleet</p>
        </div>
        <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="Create" method="post" enctype="multipart/form-data" class="row g-3" asp-antiforgery="true">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="col-md-6">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Model" class="form-label"></label>
                    <input asp-for="Model" class="form-control" />
                    <span asp-validation-for="Model" class="text-danger"></span>
                </div>

                <div class="col-md-4">
                    <label asp-for="Year" class="form-label"></label>
                    <input asp-for="Year" class="form-control" />
                    <span asp-validation-for="Year" class="text-danger"></span>
                </div>

                <div class="col-md-4">
                    <label asp-for="LicensePlate" class="form-label"></label>
                    <input asp-for="LicensePlate" class="form-control" placeholder="e.g. B 1234 XYZ" />
                    <span asp-validation-for="LicensePlate" class="text-danger"></span>
                </div>

                    <div class="col-md-4">
                    <label asp-for="NumberOfCarSeats" class="form-label"></label>
                    <input asp-for="NumberOfCarSeats" class="form-control" />
                    <span asp-validation-for="NumberOfCarSeats" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Transmission" class="form-label"></label>
                    <input asp-for="Transmission" class="form-control" placeholder="Automatic / Manual" />
                    <span asp-validation-for="Transmission" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="PricePerDay" class="form-label"></label>
                    <div class="input-group">
                        <span class="input-group-text">$</span>
                        <input asp-for="PricePerDay" class="form-control" />
                    </div>
                    <span asp-validation-for="PricePerDay" class="text-danger"></span>
                </div>

                <div class="col-md-6 form-check ms-2">
                    <input asp-for="Status" class="form-check-input" />
                    <label asp-for="Status" class="form-check-label">Available</label>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>

                <div class="col-12">
                    <label asp-for="ImageFiles" class="form-label">Upload Images</label>
                    <input asp-for="ImageFiles" type="file" multiple class="form-control" />
                    <span asp-validation-for="ImageFiles" class="text-danger"></span>
                </div>

                <div class="col-12 d-flex gap-2">
                    <button type="submit" class="btn btn-primary">Create</button>
                    <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}