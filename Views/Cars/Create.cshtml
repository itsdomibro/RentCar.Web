@model RentCar.Web.ViewModels.Car.CarCreateViewModel

@{
    ViewData["Title"] = "Create a Car";
}

<div class="page-container">
    <div class="page-header">
        <div>
            <h1 class="page-title">Create Car</h1>
            <p class="page-subtitle">Add a new vehicle to the fleet</p>
        </div>
        <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
    </div>

    <div class="view-card">
        <form asp-action="Create" method="post" enctype="multipart/form-data" class="view-form" asp-antiforgery="true">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="form-row">
                <div class="form-group">
                    <label asp-for="Name" class="form-label">Name</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Model" class="form-label">Model</label>
                    <input asp-for="Model" class="form-control" />
                    <span asp-validation-for="Model" class="text-danger"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label asp-for="Year" class="form-label">Year</label>
                    <input asp-for="Year" class="form-control" />
                    <span asp-validation-for="Year" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="LicensePlate" class="form-label">License Plate</label>
                    <input asp-for="LicensePlate" class="form-control" placeholder="e.g. B 1234 XYZ" />
                    <span asp-validation-for="LicensePlate" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="NumberOfCarSeats" class="form-label">Number of Seats</label>
                    <input asp-for="NumberOfCarSeats" class="form-control" />
                    <span asp-validation-for="NumberOfCarSeats" class="text-danger"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label asp-for="Transmission" class="form-label">Transmission</label>
                    <input asp-for="Transmission" class="form-control" placeholder="Automatic / Manual" />
                    <span asp-validation-for="Transmission" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="PricePerDay" class="form-label">Price per Day</label>
                    <div class="input-group">
                        <span class="input-group-text">$</span>
                        <input asp-for="PricePerDay" class="form-control" />
                    </div>
                    <span asp-validation-for="PricePerDay" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="form-check">
                    <input asp-for="Status" class="form-check-input" />
                    <label asp-for="Status" class="form-check-label">Available</label>
                </div>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ImageFiles" class="form-label">Upload Images</label>
                <input asp-for="ImageFiles" type="file" multiple class="form-control" />
                <span asp-validation-for="ImageFiles" class="text-danger"></span>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn btn-primary">Create</button>
                <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
