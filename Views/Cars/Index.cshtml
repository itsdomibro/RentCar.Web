@model RentCar.Web.ViewModels.Car.CarIndexViewModel

@{
    ViewData["Title"] = "Cars";
}

<div class="page-container">
    <div class="page-header">
        <div>
            <h1 class="page-title">Available Cars</h1>
            <p class="page-subtitle">Filter by date, year, or price to find the right car</p>
        </div>
        @if (User.IsInRole("Owner")) {
            <a asp-action="Create" class="btn btn-primary">Add a Car</a>
        }
    </div>

    <div class="view-card">
        <form asp-action="Index" method="get" class="filter-form">
            <div class="form-group">
                <label class="form-label">Pickup Date</label>
                <input type="date" name="pickupDate" value="@Model.PickupDate?.ToString("yyyy-MM-dd")" class="form-control" />
            </div>
            <div class="form-group">
                <label class="form-label">Return Date</label>
                <input type="date" name="returnDate" value="@Model.ReturnDate?.ToString("yyyy-MM-dd")" class="form-control" />
            </div>
            <div class="form-group">
                <label class="form-label">Year</label>
                <input type="number" name="year" value="@Model.Year" class="form-control" placeholder="e.g. 2024" />
            </div>
            <div class="form-group">
                <label class="form-label">Sort by</label>
                <select name="sortOrder" asp-items="ViewBag.SortOptions" class="form-select"></select>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Filter</button>
            </div>
        </form>
    </div>

    @if (Model.Cars.Any()) {
        <div class="cards-grid">
            @foreach (var car in Model.Cars) {
                <div class="car-card">
                    @if (car.ImageUrls != null && car.ImageUrls.Any()) {
                        <img src="@car.ImageUrls.First()" alt="@car.Name" class="car-card-image" />
                    } else {
                        <div class="car-card-image" style="display: flex; align-items: center; justify-content: center; color: #999;">
                            No image
                        </div>
                    }
                    
                    <div class="car-card-body">
                        <h3 class="car-card-title">@car.Name</h3>
                        <p class="car-card-subtitle">@car.Model (@car.Year) - @car.LicensePlate</p>
                        
                        <div class="car-card-specs">
                            <div>@car.NumberOfCarSeats seats</div>
                            <div>@car.Transmission</div>
                        </div>
                        
                        <div class="car-card-price">@car.PricePerDay.ToString("C")<span style="font-size: 0.9rem; font-weight: normal; color: #999;">/day</span></div>
                        
                        <div class="car-card-status">
                            <span class="badge @(car.Status ? "badge-success" : "badge-secondary")">
                                @(car.Status ? "Available" : "Unavailable")
                            </span>
                        </div>
                        
                        <div class="car-card-actions">
                            @if (User.IsInRole("Owner")) {
                                <a asp-action="Details" asp-route-id="@car.CarId" class="btn btn-outline-secondary">Details</a>
                                <a asp-action="Update" asp-route-id="@car.CarId" class="btn btn-primary">Edit</a>
                                <a asp-action="Delete" asp-route-id="@car.CarId" class="btn btn-danger">Delete</a>
                            } else {
                                <a asp-action="Details" asp-route-id="@car.CarId" class="btn btn-primary" style="width: 100%;">Rent</a>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    } else {
        <div class="view-card">
            <div class="empty-state">No cars match your filters.</div>
        </div>
    }

    <div class="view-card">
        <div class="pagination">
            <div class="pagination-info">Page @Model.PageNumber of @(Math.Ceiling((double)Model.TotalCars / Model.PageSize))</div>
            <div class="pagination-buttons">
                <a asp-action="Index"
                   asp-route-pageNumber="@(Model.PageNumber - 1)"
                   asp-route-pickupDate="@Model.PickupDate"
                   asp-route-returnDate="@Model.ReturnDate"
                   asp-route-year="@Model.Year"
                   asp-route-sortOrder="@Model.SortOrder"
                   class="btn btn-outline-secondary @(Model.PageNumber <= 1 ? "disabled" : "")">Previous</a>
                <a asp-action="Index"
                   asp-route-pageNumber="@(Model.PageNumber + 1)"
                   asp-route-pickupDate="@Model.PickupDate"
                   asp-route-returnDate="@Model.ReturnDate"
                   asp-route-year="@Model.Year"
                   asp-route-sortOrder="@Model.SortOrder"
                   class="btn btn-outline-secondary @(Model.PageNumber >= Math.Ceiling((double)Model.TotalCars / Model.PageSize) ? "disabled" : "")">Next</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
