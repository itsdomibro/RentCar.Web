@model RentCar.Web.ViewModels.Car.CarUpdateViewModel

@{
    ViewData["Title"] = "Update a Car";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h2 class="mb-0">Update Car</h2>
            <p class="text-muted mb-0">Edit details and manage photos</p>
        </div>
        <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="Update" method="post" enctype="multipart/form-data" class="row g-3" asp-antiforgery="true">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="col-md-6">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Model" class="form-label"></label>
                    <input asp-for="Model" class="form-control" />
                    <span asp-validation-for="Model" class="text-danger"></span>
                </div>

                <div class="col-md-4">
                    <label asp-for="Year" class="form-label"></label>
                    <input asp-for="Year" class="form-control" />
                    <span asp-validation-for="Year" class="text-danger"></span>
                </div>

                <div class="col-md-4">
                    <label asp-for="LicensePlate" class="form-label"></label>
                    <input asp-for="LicensePlate" class="form-control" />
                    <span asp-validation-for="LicensePlate" class="text-danger"></span>
                </div>

                <div class="col-md-4">
                    <label asp-for="NumberOfCarSeats" class="form-label"></label>
                    <input asp-for="NumberOfCarSeats" class="form-control" />
                    <span asp-validation-for="NumberOfCarSeats" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Transmission" class="form-label"></label>
                    <input asp-for="Transmission" class="form-control" />
                    <span asp-validation-for="Transmission" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="PricePerDay" class="form-label"></label>
                    <div class="input-group">
                        <span class="input-group-text">$</span>
                        <input asp-for="PricePerDay" class="form-control" />
                    </div>
                    <span asp-validation-for="PricePerDay" class="text-danger"></span>
                </div>

                <div class="col-md-6 form-check ms-2">
                    <input asp-for="Status" type="checkbox" class="form-check-input" />
                    <label asp-for="Status" class="form-check-label">Available</label>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>

                <div class="col-12">
                    <label class="form-label">Existing Images</label>
                    <div class="d-flex flex-wrap gap-3">
                        @if (Model.ImageUrls != null && Model.ImageUrls.Any()) {
                            for (int i = 0; i < Model.ImageUrls.Count; i++) {
                                <div class="text-center">
                                    <img src="@Model.ImageUrls[i]" width="120" class="img-thumbnail" />
                                    <div class="form-check mt-1">
                                        <input type="checkbox" class="form-check-input" name="ImageUrlsToKeep" value="@Model.ImageUrls[i]" checked />
                                        <label class="form-check-label">Keep</label>
                                    </div>
                                </div>
                            }
                        } else {
                            <p class="text-muted">No images uploaded yet.</p>
                        }
                    </div>
                </div>

                <div class="col-12">
                    <label asp-for="ImageFiles" class="form-label">Upload New Images</label>
                    <input asp-for="ImageFiles" type="file" multiple class="form-control" />
                    <span asp-validation-for="ImageFiles" class="text-danger"></span>
                </div>

                <div class="col-12 d-flex gap-2">
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                    <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}