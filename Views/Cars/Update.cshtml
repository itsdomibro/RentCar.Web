@model RentCar.Web.ViewModels.Car.CarUpdateViewModel

@{
    ViewData["Title"] = "Update a Car";
}

<div class="page-container">
    <div class="page-header">
        <div>
            <h1 class="page-title">Update Car</h1>
            <p class="page-subtitle">Edit details and manage photos</p>
        </div>
        <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
    </div>

    <div class="view-card">
        <form asp-action="Update" method="post" enctype="multipart/form-data" class="view-form" asp-antiforgery="true">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="form-row">
    <div class="form-group">
                    <label asp-for="Name" class="form-label">Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
                    <label asp-for="Model" class="form-label">Model</label>
        <input asp-for="Model" class="form-control" />
        <span asp-validation-for="Model" class="text-danger"></span>
                </div>
    </div>

            <div class="form-row">
    <div class="form-group">
                    <label asp-for="Year" class="form-label">Year</label>
        <input asp-for="Year" class="form-control" />
        <span asp-validation-for="Year" class="text-danger"></span>
    </div>

    <div class="form-group">
                    <label asp-for="LicensePlate" class="form-label">License Plate</label>
        <input asp-for="LicensePlate" class="form-control" />
        <span asp-validation-for="LicensePlate" class="text-danger"></span>
    </div>

    <div class="form-group">
                    <label asp-for="NumberOfCarSeats" class="form-label">Number of Seats</label>
        <input asp-for="NumberOfCarSeats" class="form-control" />
        <span asp-validation-for="NumberOfCarSeats" class="text-danger"></span>
                </div>
    </div>

            <div class="form-row">
    <div class="form-group">
                    <label asp-for="Transmission" class="form-label">Transmission</label>
        <input asp-for="Transmission" class="form-control" />
        <span asp-validation-for="Transmission" class="text-danger"></span>
    </div>

    <div class="form-group">
                    <label asp-for="PricePerDay" class="form-label">Price per Day</label>
                    <div class="input-group">
                        <span class="input-group-text">$</span>
        <input asp-for="PricePerDay" class="form-control" />
                    </div>
        <span asp-validation-for="PricePerDay" class="text-danger"></span>
                </div>
    </div>

    <div class="form-group">
                <div class="form-check">
                    <input asp-for="Status" type="checkbox" class="form-check-input" />
                    <label asp-for="Status" class="form-check-label">Available</label>
                </div>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>

    <div class="form-group">
                <label class="form-label">Existing Images</label>
                <div class="image-gallery">
            @if (Model.ImageUrls != null && Model.ImageUrls.Any()) {
                for (int i = 0; i < Model.ImageUrls.Count; i++) {
                            <div style="text-align: center;">
                                <img src="@Model.ImageUrls[i]" />
                                <div class="form-check" style="margin-top: 0.5rem;">
                                    <input type="checkbox" class="form-check-input" name="ImageUrlsToKeep" value="@Model.ImageUrls[i]" checked />
                                    <label class="form-check-label">Keep</label>
                        </div>
                    </div>
                }
            } else {
                        <p style="color: #999;">No images uploaded yet.</p>
            }
        </div>
    </div>

    <div class="form-group">
                <label asp-for="ImageFiles" class="form-label">Upload New Images</label>
        <input asp-for="ImageFiles" type="file" multiple class="form-control" />
        <span asp-validation-for="ImageFiles" class="text-danger"></span>
    </div>

            <div class="form-actions">
    <button type="submit" class="btn btn-primary">Save Changes</button>
                <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
            </div>
</form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
