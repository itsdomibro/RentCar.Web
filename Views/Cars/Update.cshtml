@model RentCar.Web.ViewModels.Car.CarUpdateViewModel

@{
    ViewData["Title"] = "Update a Car";
}

<h2>Update Car</h2>

<form asp-action="Update" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Model" class="control-label"></label>
        <input asp-for="Model" class="form-control" />
        <span asp-validation-for="Model" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Year" class="control-label"></label>
        <input asp-for="Year" class="form-control" />
        <span asp-validation-for="Year" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="LicensePlate" class="control-label"></label>
        <input asp-for="LicensePlate" class="form-control" />
        <span asp-validation-for="LicensePlate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NumberOfCarSeats" class="control-label"></label>
        <input asp-for="NumberOfCarSeats" class="form-control" />
        <span asp-validation-for="NumberOfCarSeats" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Transmission" class="control-label"></label>
        <input asp-for="Transmission" class="form-control" />
        <span asp-validation-for="Transmission" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PricePerDay" class="control-label"></label>
        <input asp-for="PricePerDay" class="form-control" />
        <span asp-validation-for="PricePerDay" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Status" class="control-label"></label>
        <input asp-for="Status" type="checkbox" />
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Existing Images</label>
        <div class="d-flex flex-wrap">
            @if (Model.ImageUrls != null && Model.ImageUrls.Any()) {
                for (int i = 0; i < Model.ImageUrls.Count; i++) {
                    <div class="m-2 text-center">
                        <img src="@Model.ImageUrls[i]" width="120" class="img-thumbnail" />
                        <div>
                            <input type="checkbox" name="ImageUrlsToKeep" value="@Model.ImageUrls[i]" checked />
                            <label>Keep</label>
                        </div>
                    </div>
                }
            } else {
                <p>No images uploaded yet.</p>
            }
        </div>
    </div>

    <div class="form-group">
        <label asp-for="ImageFiles" class="control-label">Upload New Images</label>
        <input asp-for="ImageFiles" type="file" multiple class="form-control" />
        <span asp-validation-for="ImageFiles" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}