@model RentCar.Web.ViewModels.Car.CarDeleteViewModel

@{
    ViewData["Title"] = "Delete a Car";
}

<div class="container py-4">
    <div class="card shadow-sm">
        <div class="card-body">
            <h2 class="card-title">Delete Car</h2>
            <p class="text-muted">Are you sure you want to delete <strong>@Model.DisplayName</strong>?</p>

            <form asp-action="Delete" asp-antiforgery="true" class="d-flex gap-2 align-items-center">
                <input type="hidden" asp-for="CarId" />
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>