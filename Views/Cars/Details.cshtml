@model RentCar.Web.ViewModels.Car.CarDetailsViewModel

@{
    ViewData["Title"] = "Car Details";
}

<div class="page-container">
    <div class="page-header">
        <div>
            <h1 class="page-title">@Model.Name @Model.Model (@Model.Year)</h1>
            <p class="page-subtitle">@Model.LicensePlate</p>
        </div>
        <div class="action-buttons">
            <a asp-action="Index" class="btn btn-outline-secondary">Back</a>
            @if (User.IsInRole("Owner")) {
                <a asp-action="Update" asp-route-id="@Model.CarId" class="btn btn-primary">Edit</a>
                <a asp-action="Delete" asp-route-id="@Model.CarId" class="btn btn-danger">Delete</a>
            } else {
                <a asp-controller="MyRentals" asp-action="Create" asp-route-id="@Model.CarId" class="btn btn-primary">Rent</a>
            }
        </div>
    </div>

    <div class="view-card">
        <div class="details-list">
            <div class="details-item">
                <div class="details-label">Seats</div>
                <div class="details-value">@Model.NumberOfCarSeats</div>
            </div>
            <div class="details-item">
                <div class="details-label">Transmission</div>
                <div class="details-value">@Model.Transmission</div>
            </div>
            <div class="details-item">
                <div class="details-label">Price per Day</div>
                <div class="details-value">@Model.PricePerDay.ToString("C")</div>
            </div>
            <div class="details-item">
                <div class="details-label">Status</div>
                <div class="details-value">
                    <span class="badge @(Model.Status ? "badge-success" : "badge-secondary")">
                        @(Model.Status ? "Available" : "Unavailable")
                    </span>
                </div>
            </div>
        </div>
    </div>

    @if (Model.ImageUrls != null && Model.ImageUrls.Any()) {
        <div class="view-card">
            <h2 class="card-title">Images</h2>
            <div class="image-gallery">
                @foreach (var url in Model.ImageUrls) {
                    <img src="@url" />
                }
            </div>
        </div>
    }
</div>
